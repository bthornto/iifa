<script type="text/javascript">
 $(function() {
    $('a').tooltip({placement: 'right'});
});
</script>
<h1>Complaints</h1>
<%= link_to 'Add New Complaint', new_complaint_path, :class => 'btn btn-large btn-primary pull-right' %>
<table class="table table-striped table-hover" style="font-size: 10px;">
  <thead>
    <tr>
      <th>Date</th>
      <th>Product</th>
      <th>Reason</th>
      <th>Synopsis</th>
      <th>Notes</th>
      <th>Store number</th>
      <th>Store name</th>
      <th>City</th>
      <th>State</th>
      <th>Coding level2</th>
      <th>Brand code</th>
      <th>Brand</th>
      <th>Ownership type</th>
      <th>Duplicate</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody >
    <% @complaints.each do |complaint| %>
      <tr>
        <td style="font-size: 10px; width: 80px;"><%= complaint.date.strftime("%d %b. %y") %></td>
        <td style="font-size: 10px;"><a href="#" data-toggle="tooltip" title="<%= complaint.product %>" style="text-decoration: none;"><%= truncate(complaint.product, :length => 10) %></a></td>
        <td style="font-size: 10px;"><a href="#" data-toggle="tooltip" title="<%= complaint.reason %>" style="text-decoration: none;"><%= truncate(complaint.reason, :length => 10) %></a></td>
        <td style="font-size: 10px;"><a href="#" data-toggle="tooltip" title="<%= complaint.synopsis %>" style="text-decoration: none;"><%= truncate(complaint.synopsis) %></a></td>
        <td style="font-size: 10px;"><a href="#" data-toggle="tooltip" title="<%= complaint.notes %>" style="text-decoration: none;"><%= truncate(complaint.notes, :length => 20) %></a></td>
        <td style="font-size: 10px;"><%= complaint.store_number %></td>
        <td style="font-size: 10px;"><%= complaint.store_name %></td>
        <td style="font-size: 10px;"><%= complaint.city %></td>
        <td style="font-size: 10px;"><%= complaint.state %></td>
        <td style="font-size: 10px;"><a href="#" data-toggle="tooltip" title="<%= complaint.coding_level2 %>" style="text-decoration: none;"><%= truncate(complaint.coding_level2, :length => 20) %></a></td>
        <td style="font-size: 10px;"><%= complaint.brand_code %></td>
        <td style="font-size: 10px;"><%= complaint.brand %></td>
        <td style="font-size: 10px;"><%= complaint.ownership_type %></td>
        <td style="font-size: 10px;"><%= complaint.duplicate %></td>
        <td style="font-size: 10px;"><%= link_to('Show', complaint, :class => 'btn btn-xs btn-primary')  %></td>
        <td style="font-size: 10px;"><%= link_to('Edit', edit_complaint_path(complaint), :class => 'btn btn-xs btn-warning')  %></td>
        <td style="font-size: 10px;"><%= link_to('Destroy', complaint, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-xs btn-danger')  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Complaint', new_complaint_path %>
