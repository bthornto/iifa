<h1>Listing complaints</h1>

<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Date</th>
      <th>Product</th>
      <th>Reason</th>
      <th>Synopsis</th>
      <th>Notes</th>
      <th>Store number</th>
      <th>Store name</th>
      <th>City</th>
      <th>State</th>
      <th>Coding level2</th>
      <th>Brand code</th>
      <th>Brand</th>
      <th>Ownership type</th>
      <th>Duplicate</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @complaints.each do |complaint| %>
      <tr>
        <td><%= complaint.date %></td>
        <td><%= complaint.product %></td>
        <td><%= complaint.reason %></td>
        <td><%= truncate(complaint.synopsis) %></td>
        <td alt="<%= complaint.notes %>"><%= truncate(complaint.notes) %></td>
        <td><%= complaint.store_number %></td>
        <td><%= complaint.store_name %></td>
        <td><%= complaint.city %></td>
        <td><%= complaint.state %></td>
        <td><%= complaint.coding_level2 %></td>
        <td><%= complaint.brand_code %></td>
        <td><%= complaint.brand %></td>
        <td><%= complaint.ownership_type %></td>
        <td><%= complaint.duplicate %></td>
        <td><%= link_to 'Show', complaint %></td>
        <td><%= link_to 'Edit', edit_complaint_path(complaint) %></td>
        <td><%= link_to 'Destroy', complaint, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

