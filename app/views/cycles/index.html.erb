<h1>Listing cycles</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>User</th>
      <th>Flavor</th>
      <th>Size</th>
      <th>Quantity</th>
      <th>Defect type</th>
      <th>Cavity number</th>
      <th>Job number</th>
      <th>Shift</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cycles.each do |cycle| %>
      <tr>
        <td><%= cycle.date %></td>
        <td><%= cycle.user %></td>
        <td><%= cycle.flavor %></td>
        <td><%= cycle.size %></td>
        <td><%= cycle.quantity %></td>
        <td><%= cycle.defect_type %></td>
        <td><%= cycle.cavity_number %></td>
        <td><%= cycle.job_number %></td>
        <td><%= cycle.shift %></td>
        <td><%= cycle.location %></td>
        <td><%= link_to 'Show', cycle %></td>
        <td><%= link_to 'Edit', edit_cycle_path(cycle) %></td>
        <td><%= link_to 'Destroy', cycle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

