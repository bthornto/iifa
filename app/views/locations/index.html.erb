<h1>Listing locations</h1>
<%= link_to 'Add New Location', new_location_path, :class => 'btn btn-large btn-primary' %>
<table class="table table-striped table-hover" style="font-size: 10px;">
  <thead>
    <tr>
      <th>Name</th>
      <th>Sbuxid</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td style="font-size: 10px;"><%= location.name %></td>
        <td style="font-size: 10px;"><%= location.sbuxid %></td>
        <td style="font-size: 10px; width: 20px"><%= link_to('Show', location, :class => 'btn btn-xs btn-primary')  %></td>
        <td style="font-size: 10px; width: 20px"><%= link_to('Edit', edit_location_path(location), :class => 'btn btn-xs btn-warning')  %></td>
        <td style="font-size: 10px; width: 20px"><%= link_to('Destroy', location, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-xs btn-danger')  %></td>
      </tr>
    <% end %>
  </tbody>
</table>
