<h1>Flavors</h1>
<%= link_to 'Add New Flavor', new_flavor_path, :class => 'btn btn-large btn-primary' %>
<table class="table table-striped table-hover" style="font-size: 10px;">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @flavors.each do |flavor| %>
      <tr>
        <td style="font-size: 10px;"><%= flavor.name %></td>
        <td style="font-size: 10px; width: 20px;"><%= link_to('Show', flavor, :class => 'btn btn-xs btn-primary')  %></td>
        <td style="font-size: 10px; width: 20px;"><%= link_to('Edit', edit_flavor_path(flavor), :class => 'btn btn-xs btn-warning')  %></td>
        <td style="font-size: 10px; width: 20px;"><%= link_to('Destroy', flavor, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-xs btn-danger')  %></td>
      </tr>
    <% end %>
  </tbody>
</table>