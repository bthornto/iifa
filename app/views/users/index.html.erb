<h1>Users</h1>
<%= link_to 'Add New User', new_user_path, :class => 'btn btn-large btn-primary' %>
<table class="table table-striped table-hover" style="font-size: 10px;">
  <thead>
    <tr>
      <th>Name</th>
      <th>Admin</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td style="font-size: 10px;"><%= user.name %></td>
        <td style="font-size: 10px;"><%= user.admin %></td>
        <td style="font-size: 10px; width: 20px"><%= link_to('Show', user, :class => 'btn btn-xs btn-primary')  %></td>
        <td style="font-size: 10px; width: 20px"><%= link_to('Edit', edit_user_path(defect_type), :class => 'btn btn-xs btn-warning')  %></td>
        <td style="font-size: 10px; width: 20px"><%= link_to('Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-xs btn-danger')  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

