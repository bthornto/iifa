<h1>Defect Types</h1>
<%= link_to 'Add New Defect Type', new_defect_type_path, :class => 'btn btn-large btn-primary' %>
<table class="table table-striped table-hover" style="font-size: 10px;">
  <thead>
    <tr>
      <th>Name</th>
      <th>Sbuxid</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @defect_types.each do |defect_type| %>
      <tr>
        <td style="font-size: 10px;"><%= defect_type.name %></td>
        <td style="font-size: 10px;"><%= defect_type.sbuxid %></td>
        <td style="font-size: 10px; width: 20px"><%= link_to('Show', defect_type, :class => 'btn btn-xs btn-primary')  %></td>
        <td style="font-size: 10px; width: 20px"><%= link_to('Edit', edit_defect_type_path(defect_type), :class => 'btn btn-xs btn-warning')  %></td>
        <td style="font-size: 10px; width: 20px"><%= link_to('Destroy', defect_type, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-xs btn-danger')  %></td>
      </tr>
    <% end %>
  </tbody>
</table>
